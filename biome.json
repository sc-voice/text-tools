{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
    "lineWidth": 70,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "style": {
        "useConst": "off",
        "noParameterAssign": "off",
        "useTemplate": "off",
        "useSingleVarDeclarator": "off",
        "noUselessElse": "off"
      },
      "suspicious": {
        "noDoubleEquals": "off",
        "useIsArray": "off"
      }
		}
	},
	"javascript": {
		"formatter": {
      "bracketSameLine": true,
			"quoteStyle": "single"
		}
	}
}
