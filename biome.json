{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"include": ["src/**/*js", "test/**/*js"],
		"ignoreUnknown": true,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 70,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off",
				"noUselessConstructor": "off"
			},
			"style": {
				"useConst": "off",
				"noParameterAssign": "off",
				"useTemplate": "off",
				"noUnusedTemplateLiteral": "off",
				"useSingleVarDeclarator": "off",
				"noUselessElse": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"suspicious": {
				"noDoubleEquals": "off",
				"useIsArray": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"bracketSameLine": true,
			"quoteStyle": "single"
		}
	}
}
